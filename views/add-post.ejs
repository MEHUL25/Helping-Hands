<%- include('includes/head.ejs') %>

</head>

<body>
    
   <%- include('includes/navigation.ejs') %>
   
    <!-- Cart view section -->
    <section id="aa-myaccount">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
             <div class="aa-myaccount-area">
                 <div class="row">
                   <div class="col-md-6">
                     <div class="aa-myaccount-login">
                     <h4 style="text-align:center;">Add Post</h4>
                      <form action="/user/add-post" method="POST" class="aa-login-form">
                        
                        <label for="">City<span>*</span></label>
                        <input type="text" id="city" name="city" placeholder="City">

                        <label for="">Name<span>*</span></label>
                        <input type="text" id="name" name="name" placeholder="Name">

                        <label for="">Contact Number<span>*</span></label>
                        <input type="text" id="contact" name="contact" placeholder="Contact Number">

                        <label for="">Address<span>*</span></label>
                        <input type="text" id="address" name="address" placeholder="Address">

                        <label for="">Type<span>*</span></label>
                        <br>
                        <input type="radio" id="consumable" name="type" value="Consumable">
                        <label for="consumable">Consumable</label>
                        <input type="radio" id="nonconsumable" name="type" value="Non Consumable">
                        <label for="nonconsumable">Non Consumable</label>

                        <br>
                        <label for="">Description<span>*</span></label>
                        <input type="text" id="description" name="description" placeholder="Description">

                        <label for="">Today's Date'<span>*</span></label>
                        <input type="date" id="tdate" name="tdate" placeholder="Today's Date'">
                        <br>
                        <label for="">Availibility Status<span>*</span></label>
                        <br>
                        <input type="radio" id="yes" name="status" value="Yes">
                        <label for="yes">Yes</label>
                        <input type="radio" id="no" name="status" value="No">
                        <label for="no">No</label>
                        <br>
                         <button style="margin-left: 45%;" type="submit" class="aa-browse-btn">Submit</button>
                       </form>
                       <br><br><br>
                     </div>
                   </div>
                   <div class="col-md-6">
                     <div class="aa-myaccount-register">
                      <h4 style="text-align:center;">Edit Post</h4>
                      <form action="/user/edit" method="POST" class="aa-login-form">
                         <label for="">Enter Post Id<span>*</span></label>
                         <input type="text" id="title" name="title" placeholder="Post Id">
                         
                         <button style="margin-left: 45%;" type="submit" class="aa-browse-btn">Submit</button>
                       </form>
                       <br><br><br><br><hr><br><br><br>
                     </div>
                   </div>
                   <div class="col-md-6">
                    <div class="aa-myaccount-register">
                     <h4 style="text-align:center;">Delete Post</h4>
                     <form action="/user/delete" method="POST" class="aa-login-form">
                        <label for="">Enter Post Id<span>*</span></label>
                        <input type="text" id="title" name="title" placeholder="Post Id">
                        
                        <button style="margin-left: 45%;" type="submit" class="aa-browse-btn">Submit</button>
                      </form>
                      <br><br><br>
                    </div>
                  </div>
                 </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- / Cart view section -->

<%- include('includes/end.ejs') %>